<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar">
        {{>adminMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>adminTop}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
            {{#if awaitingApproval}}
            <div class="col-12 m-0 p-0 w-100" id="{{!-- form-add --}}" style="background:#FAFFF9;">
                <p class="" id="">Showing results {{awaitingApproval.pagingCounter}} - {{#estimate estimate
                    awaitingApproval.totalDocs}}{{/estimate}} of {{awaitingApproval.totalDocs}}
                </p>
                <div class="card d-flex flex-row w-100 member-card-header" style="">

                    <ul class="list-group list-group-flush d-flex flex-row  w-100 h-100" style="border:none;">
                        {{!-- <li class="list-group-item text-center px-1 m-0" style="width:10%">FirstName</li> --}}
                        <li class="list-group-item text-center px-0 m-0" style="width:13%;border:none;">FirstName</li>
                        <li class="list-group-item text-center px-0 m-o" style="width:13%;border:none;">LastName</li>
                        <li class="list-group-item text-center px-0" style="width:25%;border:none;">EmailAddress</li>
                        <li class="list-group-item text-center px-0" style="width:13%;border:none;">Phone</li>
                        <li class="list-group-item text-center px-0" style="width:24%;border:none;">Groups</li>
                        <li class="list-group-item text-center px-0"
                            style="width:17%;border:none;float:right;clear:both">Action
                            <input type="checkbox" name="" id="">
                        </li>
                    </ul>
                </div>

                {{#each awaitingApproval.docs}}
                <div class="card d-flex flex-row align-items-center w-100 mt-2 member-card pl-2" style="">

                    <ul class="list-group list-group-flush d-flex flex-row w-100">
                        <li class="list-group-item text-center px-0" style="width:13%;border:none">
                            {{this.user_id.firstname}}
                        </li>
                        <li class="list-group-item text-center px-0" style="width:13%;border:none;">
                            {{this.user_id.lastname}}
                        </li>
                        <li class="list-group-item text-center px-0" style="width:25%;border:none;">
                            {{this.user_id.email}}</li>
                        <li class="list-group-item text-center px-0 " style="width:13%;border:none;">
                            {{this.user_id.phone}}</li>
                        <li class="list-group-item text-center px-0 " style="width:24%;border:none;">
                            {{this.group_id.name}}

                        </li>
                        <li class="list-group-item text-center px-0" style="width: 17%;border:none;">
                            <form action="viewUser" method="get" id="viewForm">
                                <input type="text" name="" id="" value="{{this._id}}" style="display: none;">
                            </form>
                            <button type="button" class="btn btn-primary" id="{{this._id}}"
                                onclick='window.location.href="/group/approve?group={{this.group_id._id}}&user={{this.user_id._id}}"'>
                                Approve
                            </button>
                        </li>
                    </ul>
                </div>
                {{/each}}
                {{/if}}

                <nav aria-label="..." class="mt-3">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#previous awaitingApproval.page}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="/group/awaitingApproval?limit={{awaitingApproval.limit}}&page={{awaitingApproval.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link"
                                href="/group/awaitingApproval?limit={{awaitingApproval.limit}}&page={{awaitingApproval.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{/previous}}


                        {{#if awaitingApproval}}
                        {{#loop 1 awaitingApproval.totalPages 1}}
                        <li class="page-item"><a class="page-link"
                                href="/group/awaitingApproval?limit={{awaitingApproval.limit}}&page={{this}}">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next awaitingApproval.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../group/awaitingApproval?limit={{awaitingApproval.limit}}&page={{awaitingApproval.nextPage}}">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../group/awaitingApproval?limit={{awaitingApproval.limit}}&page={{awaitingApproval.nextPage}}">Next</a>
                        </li>
                        {{/next}}
                        {{!-- {{/if}} --}}
                        {{/if}}
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>