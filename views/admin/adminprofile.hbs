    <div class="col-10 overflow-scroll" id="main">
        <div class="row">
            <div class="col-12">
                <div class="row d-flex justify-content-center">
                    <div class="col-6 mt-4 mb-5 d-flex flex-row align-items-center px-5 mx-3" id="profile" style="">
                        <div class="mx-3">
                            <div class="img-holder" id="avatarbox"
