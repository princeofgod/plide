                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    const editProfile = document.getElementById("edit-btn")
    const avatarField = document.getElementById("file")
    const avatarbox = document.getElementById("avatarbox")
    const tab = document.getElementById("profile-tab")
    const tabContent = document.getElementById("profile")

    const uploadForm = document.getElementById("upload_image")

    avatarField.addEventListener("change", () => {
        uploadForm.submit()
    })
    //Opens the dialog to select avatar.
    avatarbox.addEventListener("click", () => {
        avatarField.click();
    })

    $('[data-toggle="tab"],[data-toggle="pill"]').click(function () {
        $(this).parent().children('.active[data-toggle="tab"],.active[data-toggle="pill"]').removeClass('active');
        $(this).addClass('active');
    });
</script>