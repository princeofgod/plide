<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar">
        {{>adminMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>adminTop}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if groups}}
            <div class="w-100">
                <p class="" id="">Showing results {{groups.pagingCounter}} - {{#estimate estimate
                    groups.totalDocs}}{{/estimate}} of {{groups.totalDocs}}
                </p>

                <table id="members-list" class="mt-3">
                    <tr>
                        <th class="text-center" style="width:15%">Group Name</th>
                        <th class="text-center" style="width:35%">Group Description</th>
                        <th class="text-center" style="width:15%">Group leader</th>
                        <th class="text-center" style="width:10%">Group Secretary</th>
                        <th class="text-center" style="width:25%">ACTION</th>
                    </tr>
                    {{#each groups.docs}}
                    <tr>

                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.leader.firstname}} {{this.leader.lastname}}</td>
                        <td>{{this.secretary.firstname}} {{this.secretary.lastname}}</td>
                        <td>
                            {{!-- Unseen form for delete event function --}}
                            <form action="delete" method="POST" style="display:none" id="{{this._id}}-delete_form">
                                <input type="text" name="group_name" id="" value="{{this._id}}" style="display:none">

                            </form>

                            <!-- Modal for update -->
                            <div class="modal fade" id="exampleModalCenter-{{this._id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Update Event</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="update" method="post" id="{{this._id}}-update_form">
                                                <input type="text" name="old_title" id="" value="{{this.name}}"
                                                    style="display:none;">
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="name" class="">Group Name</label>
                                                    <input class="form-control" type="text" name="name" id=""
                                                        autocomplete="off" value="{{this.name}}" required>
                                                </div>
                                                {{!-- --}}
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="description" class="">Description</label>

                                                    <textarea class="form-control" name="description" id="" cols="30"
                                                        rows="5" style="resize: none;" value="{{this.description}}"
                                                        required>{{this.description}}</textarea>
                                                </div>
                                                {{!-- --}}
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="event-manager" class="">Leader</label>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <input list="leader" name="leader" class="form-control"
                                                                value="{{this.leader.firstname}} {{this.leader.lastname}} ({{this.leader.email}})">
                                                            <datalist id="leader">
                                                                {{#if users}}
                                                                {{#each users}}
                                                                <option value="{{this}}"></option>
                                                                {{/each}}
                                                                {{/if}}
                                                            </datalist>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- --}}
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="secretary" class="">Secretary</label>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <input list="secretary" name="secretary"
                                                                class="form-control"
                                                                value="{{this.secretary.firstname}} {{this.secretary.lastname}} ({{this.secretary.email}})">
                                                            <datalist id="leader">
                                                                {{#if users}}
                                                                {{#each users}}
                                                                <option value="{{this}}"></option>
                                                                {{/each}}
                                                                {{/if}}
                                                            </datalist>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- --}}

                                                {{!-- --}}
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            {{!-- Modal for update --}}
                            {{!-- Delete modal --}}
                            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog"
                                aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure to delete?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-primary"
                                                onclick="document.location.href='../group/delete?id={{this._id}}'">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <!--View  Modal -->
                            <div class="modal fade" id="view-{{this._id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Select Nominees</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="addnominee" method="post" id="addnominees">
                                                <label for="name">Group Name</label><br>
                                                <input class="form-control" type="text" name="name" id=""
                                                    value="{{this.name}}" disabled><br>
                                                <label for="user">Select Nominees</label><br>
                                                <input list="user" class="form-control" name="user" id=""
                                                    autocomplete="off" required>
                                                <datalist id="user">
                                                    <option value="Sunny Ade (test@mailinator.com)"></option>
                                                    <option value="Sunny Ade (test@mailinator.com)"></option>

                                                    {{#if users}}
                                                    {{#each users}}
                                                    <option value="{{this}}"></option>
                                                    {{/each}}
                                                    {{/if}}
                                                </datalist>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary"
                                                onclick="document.getElementById('addnominees').submit()">Save
                                                changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Button trigger modal -->
                            <button type="button" class="event-x btn btn-primary"
                                onclick="document.location.href='../group/view-group-info?id={{this._id}}'">
                                View
                            </button>
                            {{!-- <button type="button" class="event-x btn btn-primary" data-toggle="modal"
                                data-target="#view-{{this._id}}">
                                View
                            </button> --}}
                            <button type="button" class="event-x event-update-btn" data-toggle="modal"
                                data-target="#exampleModalCenter-{{this._id}}">Update</button>
                            <button type="submit" class="event-x event-delete-btn text-center mx-0" id="{{this._id}}-id"
                                onclick="" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </table>
                {{/if}}

                <nav aria-label="..." class="mt-3 mx-auto">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#previous groups.page}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="/group/viewgroups?limit={{groups.limit}}&page={{groups.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link"
                                href="/group/viewgroups?limit={{groups.limit}}&page={{groups.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{/previous}}

                        {{!-- <li class="page-item">
                            <a class="page-link" href="/users/members?limit={{members.limit}}&page={{members.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li> --}}

                        {{#if groups}}
                        {{#loop 1 groups.totalPages 1}}
                        <li class="page-item">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{this}}">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next groups.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{groups.nextPage}}">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{groups.nextPage}}">Next</a>
                        </li>
                        {{/next}}
                    </ul>
                </nav>

            </div>
            {{/if}}
            {{#if groups}}
            <div class="col-12 m-0 p-0 w-100" id="{{!-- form-add --}}" style="background:#FAFFF9;">
                <p class="" id="">Showing results {{groups.pagingCounter}} - {{#estimate estimate
                    groups.totalDocs}}{{/estimate}} of {{groups.totalDocs}}
                </p>
                <table id="members-list">
                    <tr>
                        <th style="width:10%">Group Name</th>
                        <th style="width:40%">Group Description</th>
                        <th style="width:10%">Group Leader</th>
                        <th style="width:10%">Group Secretary</th>
                        <th style="width:20%">Action</th>
                    </tr>

                    {{#each groups.docs}}

                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.leader.firstname}} {{this.leader.lastname}}</td>
                        <td>{{this.secretary.firstname}} {{this.secretary.lastname}}</td>
                    </tr>


                    {{/each}}

                </table>
                {{!-- <table id="groups-list">
                    <tr>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email Address</th>
                        <th>Phone number</th>
                        <th>Location</th>
                        <th></th>
                    </tr>
                    {{#if groups}}
                    {{#each groups.docs}}
                    <tr>
                        <td>{{this.firstname}}</td>
                        <td>{{this.lastname}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.address}}</td>
                        <td>
                            <form action="viewUser" method="get" id="viewForm">
                                <input type="text" name="" id="" value="{{this._id}}" style="display: none;">
                            </form>
                            <button type="button" class="btn btn-primary" id="{{this._id}}"
                                onclick='//window.location.href="/users/viewUser?id={{this._id}}"'>
                                View
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </table> --}}
                <nav aria-label="..." class="mt-3">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#previous groups.page}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{groups.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{groups.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{/previous}}

                        {{!-- <li class="page-item">
                            <a class="page-link" href="/users/groups?limit={{groups.limit}}&page={{groups.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li> --}}


                        {{#loop 1 groups.totalPages 1}}
                        <li class="page-item"><a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{this}}">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next groups.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{groups.nextPage}}">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../group/viewgroups?limit={{groups.limit}}&page={{groups.nextPage}}">Next</a>
                        </li>
                        {{/next}}
                    </ul>
                </nav>
                {{/if}}

            </div>
        </div>
    </div>
</div>