<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar">
        {{>adminMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>adminTop}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}


            {{#if cause.docs}}


            <div class="w-100">

                <p class="" id="">Showing results {{cause.pagingCounter}} - {{#estimate estimate
                    cause.totalDocs}}{{/estimate}} of {{cause.totalDocs}}
                </p>

                <table id="members-list" class="mt-3">
                    <tr>
                        <th class="text-center" style="width:15%">Name</th>
                        <th class="text-center" style="width:38%">Description</th>
                        <th class="text-center" style="width:20%">Organiser's Name</th>
                        <th class="text-center" style="width:10%">Phone</th>
                        <th class="text-center" style="width:17%"></th>
                    </tr>
                    {{#each cause.docs}}
                    <tr>
                        {{!-- Delete modal --}}
                        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog"
                            aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary"
                                            onclick="document.getElementById('{{this._id}}-delete_form').submit()">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- Unseen form for delete event function --}}
                        <form action="delete" method="post" style="display:none" id="{{this._id}}-delete_form">
                            <input type="text" name="cause_name" id="" value="{{this._id}}" style="display:none">
                            {{!-- <input type="text" name="event_title" id="" value="{{this.event_title}}"
                                style="display:none"> --}}
                        </form>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.organiserId.firstname}} {{this.organiserId.lastname}}</td>
                        <td>{{this.phone}}</td>
                        <td><button type="submit" class="fund-btn m-1 px-0" id="{{this.name}}"
                                onclick="window.location.href='payment?id={{this._id}}'">Fund</button>
                            <button type="submit" class="px-0 fund-btn text-center mx-0" id="{{this._id}}-id" onclick=""
                                data-toggle="modal" data-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </table>
                {{/if}}

                <nav aria-label="..." class="mt-3 mx-auto">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#previous cause.page}}
                        <li class="page-item disabled">
                            <a class="page-link" href="/cause/viewcauses?limit={{cause.limit}}&page={{cause.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link" href="/cause/viewcauses?limit={{cause.limit}}&page={{cause.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{/previous}}

                        {{!-- <li class="page-item">
                            <a class="page-link" href="/users/members?limit={{members.limit}}&page={{members.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li> --}}

                        {{#if cause}}
                        {{#loop 1 cause.totalPages 1}}
                        <li class="page-item">
                            <a class="page-link" href="../cause/viewcauses?limit={{cause.limit}}&page={{this}}">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next cause.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../cause/viewcauses?limit={{cause.limit}}&page={{cause.nextPage}}">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../cause/viewcauses?limit={{cause.limit}}&page={{cause.nextPage}}">Next</a>
                        </li>
                        {{/next}}
                        {{!-- {{#next cause.page cause.totalpages}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../viewcauses?limit={{cause.limit}}&page={{cause.nextPage}} disabled">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../viewcauses?limit={{cause.limit}}&page={{cause.nextPage}}">Next</a>
                        </li>
                        {{/next}} --}}


                    </ul>
                </nav>

            </div>
            {{else}}
            <div class="d-flex align-items-center justify-content-center">
                <p class="text-center font-italics">No causes to view currently...</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>
</div>