<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar" style="border:solid 1px black">
        {{>adminMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>adminTop}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}


            {{#if events}}
            <div class="w-100">
                <p class="" id="">Showing results {{events.pagingCounter}} - {{#estimate estimate
                    events.totalDocs}}{{/estimate}} of {{events.totalDocs}}
                </p>

                <table id="members-list" class="mt-3">
                    <tr>
                        <th class="text-center" style="width:15%">Name</th>
                        <th class="text-center" style="width:35%">Description</th>
                        <th class="text-center" style="width:15%">Organiser's Name</th>
                        <th class="text-center" style="width:10%">Phone</th>
                        <th class="text-center" style="width:25%">ACTION</th>
                    </tr>
                    {{#each events.docs}}
                    <tr>

                        <td>{{this.event_title}}</td>
                        <td>{{this.event_description}}</td>
                        <td>{{this.event_manager.firstname}} {{this.event_manager.lastname}}</td>
                        <td>{{this.phone}}</td>
                        <td>
                            {{!-- Unseen form for delete event function --}}
                            <form action="delete" method="post" style="display:none" id="{{this._id}}-delete_form">
                                <input type="text" name="event_title" id="" value="{{this.event_title}}"
                                    style="display:none">
                                {{!-- <input type="text" name="event_title" id="" value="{{this.event_title}}"
                                    style="display:none"> --}}
                            </form>

                            <!-- Modal for update -->
                            <div class="modal fade" id="exampleModalCenter-{{this._id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Update Event</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="update" method="post" id="{{this._id}}-update_form">
                                                <input type="text" name="old_title" id="" value="{{this.event_title}}"
                                                    style="display:none;">
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="event_title" class="">Event Title</label>
                                                    <input class="form-control" type="text" name="event_title" id=""
                                                        autocomplete="off" value="{{this.event_title}}" required>
                                                </div>
                                                {{!-- --}}
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="event_description" class="">Description</label>

                                                    <textarea class="form-control" name="event_description" id=""
                                                        cols="30" rows="5" style="resize: none;"
                                                        value="{{this.event_description}}"
                                                        required>{{this.event_description}}</textarea>
                                                </div>
                                                {{!-- --}}
                                                <div class="mx-5 px-2 my-3">
                                                    <label for="event-manager" class="">Event Manager</label>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <input list="event_manager" name="event_manager"
                                                                class="form-control"
                                                                value="{{this.event_manager.firstname}} {{this.event_manager.lastname}} ({{this.event_manager.email}})">
                                                            <datalist id="event_manager">
                                                                {{#if users}}
                                                                {{#each users}}
                                                                <option value="{{this}}"></option>
                                                                {{/each}}
                                                                {{/if}}
                                                            </datalist>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- --}}
                                                <div class="mx-5 px-2 my-3">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="start-date" class="">Start date</label>
                                                            <input class="form-control" type="date" name="start_date"
                                                                id="" value="{{this.start_date}}" required>
                                                        </div>
                                                        <div class="col-6">
                                                            <label for="end-date" class="">End date</label>
                                                            <input class="form-control" type="date" name="end_date"
                                                                id="" value="{{this.end_date}}" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- --}}
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            {{!-- Modal for update --}}
                            {{!-- Delete modal --}}
                            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog"
                                aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure to delete?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary"
                                                onclick="document.getElementById('{{this._id}}-delete_form').submit()">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <!-- Modal -->
                            <div class="modal fade" id="view-{{this._id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Select Nominees</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="addnominee" method="post" id="addnominees">
                                                <label for="event_title">Event Title</label><br>
                                                <input class="form-control" type="text" name="event_title" id=""
                                                    value="{{this.event_title}}" disabled><br>
                                                <label for="user">Select Nominees</label><br>
                                                <input list="user" class="form-control" name="user" id=""
                                                    autocomplete="off" required>
                                                <datalist id="user">
                                                    <option value="Sunny Ade (test@mailinator.com)"></option>
                                                    <option value="Sunny Ade (test@mailinator.com)"></option>

                                                    {{#if users}}
                                                    {{#each users}}
                                                    <option value="{{this}}"></option>
                                                    {{/each}}
                                                    {{/if}}
                                                </datalist>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary"
                                                onclick="document.getElementById('addnominees').submit()">Save
                                                changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Button trigger modal -->
                            <button type="button" class="event-x btn btn-primary"
                                onclick="document.location.href='../event/view-event-info?id={{this._id}}'">
                                View
                            </button>
                            {{!-- <button type="button" class="event-x btn btn-primary" data-toggle="modal"
                                data-target="#view-{{this._id}}">
                                View
                            </button> --}}
                            <button type="button" class="event-x event-update-btn" data-toggle="modal"
                                data-target="#exampleModalCenter-{{this._id}}">Update</button>
                            <button type="submit" class="event-x event-delete-btn text-center mx-0" id="{{this._id}}-id"
                                onclick="" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </table>
                {{/if}}

                <nav aria-label="..." class="mt-3 mx-auto">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#previous events.page}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="/event/viewevents?limit={{events.limit}}&page={{events.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link"
                                href="/event/viewevents?limit={{events.limit}}&page={{events.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{/previous}}

                        {{!-- <li class="page-item">
                            <a class="page-link" href="/users/members?limit={{members.limit}}&page={{members.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li> --}}

                        {{#if events}}
                        {{#loop 1 events.totalPages 1}}
                        <li class="page-item">
                            <a class="page-link"
                                href="../event/viewevents?limit={{events.limit}}&page={{this}}">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next events.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../event/viewevents?limit={{events.limit}}&page={{events.nextPage}}">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../event/viewevents?limit={{events.limit}}&page={{events.nextPage}}">Next</a>
                        </li>
                        {{/next}}



                    </ul>
                </nav>

            </div>
            {{/if}}
        </div>
    </div>
</div>
</div>

<script>

</script>