<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar" style="border:solid 1px black">
        {{>adminMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>adminTop}}
            </div>
        </div>

        {{!-- Modal for add nominees --}}
        <div class="modal fade" id="add-nominee" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="add-nominee" method="post" class="" id="update-nominee">
                            <input type="text" name="event" id="" value="{{event.event_title}}" style="display: none;">
                            <input list="nominee" name="nominee" class="flexdatalist form-control" data-min-length="1"
                                data-searchContain="false" multiple="multiple" style="z-index:1900!">
                            <datalist id="nominee">
                                {{#if users}}
                                {{#each users}}
                                <option value="{{this}}"></option>
                                {{/each}}
                                {{/if}}
                            </datalist>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary"
                            onclick="document.getElementById('update-nominee').submit();">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        {{!-- Modal for add nominees --}}
        <div class="row px-4 pl-4 d-flex justify-content-center align-items-center" style="margin-top: auto;">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            <div class=" row w-75" id="view-info">
                <div class="col-12">
                    <div class="row mt-3">

                        <div class="col-6">
                            <label for="firstname">Name</label> <br>
                            <input class="form-control" type="text" name="firstname" id="" value="{{event.event_title}}"
                                style="font-size: 1vw;" disabled>
                        </div>
                        <div class="col-6">
                            <label for="lastname">Description</label> <br>
                            <input class="form-control" type="text" name="lastname" id=""
                                value="{{event.event_description}}" style="font-size: 1vw;" disabled>
                        </div>
                    </div>
                    <div class="row  mt-3">
                        <div class="col-6">
                            <label for="email">Date Published</label> <br>
                            <input class="form-control" type="text" name="email" id="" value="{{event.date}}"
                                style="font-size: 1vw;" disabled>
                        </div>
                        <div class="col-6">
                            <label for="phone">Event Manager</label> <br>
                            <input class="form-control" type="text" name="phone" id=""
                                value="{{event.event_manager.firstname}} {{event.event_manager.lastname}}"
                                style="font-size: 1vw;" disabled>
                        </div>
                    </div>

                    <label for="nominees" class="mt-5">Nominees</label> <br>
                    <div class="row d-flex flex-row ">
                        {{!-- <div class="col-6">
                            <label for="group">Group</label> <br>
                            <input class="form-control" type="text" name="group" id="" value="{{this.group_id.name}}"
                                style="font-size: 1vw;" disabled>
                        </div> --}}

                        {{#if event.nominees}}
                        {{#each event.nominees}}
                        {{event.nominees}}
                        <div class="col-6 mt-2">

                            <input class="form-control" type="text" name="nominees" class="mt-5" id=""
                                value="{{this.firstname}} {{this.lastname}}" style="font-size: 1vw;" disabled>
                        </div>
                        {{/each}}
                        <div class="row mt-3">
                            <p class="ml-3">Add more nominees</p>
                            <button class="ml-3 btn-white-1" data-toggle="modal" data-target="#add-nominee"> + Add
                                now</button>
                        </div>
                        {{else}}
                        <div class="">
                            <p class="ml-3">No nominees selected</p>
                            <button class="ml-3 btn-white-1" data-toggle="modal" data-target="#add-nominee"> + Add
                                now</button>
                        </div>
                        {{/if}}
                    </div>



