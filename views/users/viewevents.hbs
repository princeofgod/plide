<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar" style="border:solid 1px black">
        {{>userMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>topnav}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}


            {{#if events.docs}}
            <div class="w-100">
                <p class="" id="">Showing results {{events.pagingCounter}} - {{#estimate estimate
                    events.totalDocs}}{{/estimate}} of {{events.totalDocs}}
                </p>

                <table id="members-list" class="mt-3">
                    <tr>
                        <th class="text-center" style="width:20%">Event Name</th>
                        <th class="text-center" style="width:45%">Event Description</th>
                        <th class="text-center" style="width:20%">Event manager</th>
                        <th class="text-center" style="width:10%">Phone</th>

                    </tr>
                    {{#each events.docs}}
                    <tr>
                        <td>{{this.event_title}}</td>
                        <td>{{this.event_description}}</td>
                        <td>{{this.event_manager.firstname}} {{this.event_manager.lastname}}</td>
                        <td>{{this.phone}}</td>

                    </tr>
                    {{/each}}
                </table>

                <nav aria-label="..." class="mt-3 mx-auto">
                    <ul class="pagination pagination-sm justify-content-center" style="font-size: 1vw;">
                        {{#previous events.page}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="/event/viewevents?limit={{events.limit}}&page={{events.prevPage}}" tabindex="-1"
                                style="font-size: 1vw;">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link"
                                href="/event/viewevents?limit={{events.limit}}&page={{events.prevPage}}" tabindex="-1"
                                style="font-size: 1vw;">Previous</a>
                        </li>
                        {{/previous}}

                        {{!-- <li class="page-item">
                            <a class="page-link" href="/users/members?limit={{members.limit}}&page={{members.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li> --}}


                        {{#loop 1 events.totalPages 1}}
                        <li class="page-item">
                            <a class="page-link" href="../event/viewevents?limit={{events.limit}}&page={{this}}"
                                style="font-size: 1vw;">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next events.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../event/viewevents?limit={{events.limit}}&page={{events.nextPage}}"
                                style="font-size: 1vw;">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../event/viewevents?limit={{events.limit}}&page={{events.nextPage}}"
                                style="font-size: 1vw;">Next</a>
                        </li>
                        {{/next}}



                    </ul>
                </nav>

            </div>
            {{else}}
            <div class="d-flex flex-column justify-content-center w-100">
                <p class="text-center font-italic">No events yet...</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>
</div>