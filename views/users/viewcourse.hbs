<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar" style="border:solid 1px black">
        {{>userMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>topnav}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}


            {{#if course}}
            <table id="members-list">
                <tr>
                    <th style="width:30vw">Name</th>
                    <th>Description</th>
                    <th style="width:30vw">Organiser's Name</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
                {{#each course.docs}}
                <tr>
                    <th>{{this.name}}</th>
                    <th>{{this.description}}</th>
                    <th>{{this.organiserId.firstname}} {{this.organiserId.lastname}}</th>
                    <th>{{this.phone}}</th>
                    <th><button type="submit" class="fund-btn m-2" id="{{this.name}}"
                            onclick="window.location.href='payment?id={{this._id}}'">Fund</button></th>
                </tr>
                {{/each}}
            </table>
            {{/if}}

            <nav aria-label="..." class="mt-3">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#previous course.page}}
                    <li class="page-item disabled">
                        <a class="page-link" href="/course/viewcourses?limit={{course.limit}}&page={{course.prevPage}}"
                            tabindex="-1">Previous</a>
                    </li>
                    {{else}}
                    <li class="page-item">
                        <a class="page-link" href="/course/viewcourses?limit={{course.limit}}&page={{course.prevPage}}"
                            tabindex="-1">Previous</a>
                    </li>
                    {{/previous}}

                    {{!-- <li class="page-item">
                        <a class="page-link" href="/users/members?limit={{members.limit}}&page={{members.prevPage}}"
                            tabindex="-1">Previous</a>
                    </li> --}}

                    {{#if course}}
                    {{#loop 1 course.totalPages 1}}
                    <li class="page-item">
                        <a class="page-link" href="../course/viewcourses?limit={{course.limit}}&page={{this}}">{{this}}
                        </a>
                    </li>
                    {{/loop}}

                    {{#next course.hasNextPage}}
                    <li class="page-item disabled">
                        <a class="page-link"
                            href="../course/viewcourses?limit={{course.limit}}&page={{course.nextPage}}">Next</a>
                    </li>
                    {{else}}
                    <li class="page-item ">
                        <a class="page-link"
                            href="../course/viewcourses?limit={{course.limit}}&page={{course.nextPage}}">Next</a>
                    </li>
                    {{/next}}
                    {{!-- {{#next course.page course.totalpages}}
                    <li class="page-item disabled">
                        <a class="page-link"
                            href="../viewcourses?limit={{course.limit}}&page={{course.nextPage}} disabled">Next</a>
                    </li>
                    {{else}}
                    <li class="page-item ">
                        <a class="page-link"
                            href="../viewcourses?limit={{course.limit}}&page={{course.nextPage}}">Next</a>
                    </li>
                    {{/next}} --}}

                    {{/if}}
                </ul>
            </nav>

        </div>
    </div>
</div>
</div>