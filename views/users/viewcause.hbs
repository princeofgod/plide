<div class="row" style="height:100vh">
    <div class="col-md-2 p-0 m-0 h-100" id="menu-bar" style="border:solid 1px black">
        {{>userMenu}}
    </div>
    <div class="col-md-10 " id="main" style="overflow-y:scroll;overflow-x:hidden;">
        <div class="row ">
            <div class="col-12" style="">
                {{>topnav}}
            </div>
        </div>
        <div class="row px-4 pl-4">


            {{#if error}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}


            {{#if cause}}

            <div class="w-100">
                <p class="" id="">Showing results {{cause.pagingCounter}} - {{#estimate estimate
                    cause.totalDocs}}{{/estimate}} of {{cause.totalDocs}}
                </p>
                <table id="members-list" class="mt-3">
                    <tr>
                        <th class="text-center" style="width:20%">Name</th>
                        <th class="text-center" style="width:40%">Description</th>
                        <th class="text-center" style="width:20%">Organiser's Name</th>
                        <th class="text-center" style="width:10%">Phone</th>
                        <th class="text-center" style="width:10%"></th>
                    </tr>
                    {{#each cause.docs}}
                    <tr>
                        <th>{{this.name}}</th>
                        <th>{{this.description}}</th>
                        <th>{{this.organiserId.firstname}} {{this.organiserId.lastname}}</th>
                        <th>{{this.phone}}</th>
                        <th><button type="submit" class="fund-btn m-2" id="{{this.name}}"
                                onclick="window.location.href='payment?id={{this._id}}'">Fund</button></th>
                    </tr>
                    {{/each}}
                </table>
                {{/if}}

                <nav aria-label="..." class="mt-3 mx-auto">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#previous cause.page}}
                        <li class="page-item disabled">
                            <a class="page-link" href="/cause/viewcauses?limit={{cause.limit}}&page={{cause.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link" href="/cause/viewcauses?limit={{cause.limit}}&page={{cause.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li>
                        {{/previous}}

                        {{!-- <li class="page-item">
                            <a class="page-link" href="/users/members?limit={{members.limit}}&page={{members.prevPage}}"
                                tabindex="-1">Previous</a>
                        </li> --}}

                        {{#if cause}}
                        {{#loop 1 cause.totalPages 1}}
                        <li class="page-item">
                            <a class="page-link" href="../cause/viewcauses?limit={{cause.limit}}&page={{this}}">{{this}}
                            </a>
                        </li>
                        {{/loop}}

                        {{#next cause.hasNextPage}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../cause/viewcauses?limit={{cause.limit}}&page={{cause.nextPage}}">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../cause/viewcauses?limit={{cause.limit}}&page={{cause.nextPage}}">Next</a>
                        </li>
                        {{/next}}
                        {{!-- {{#next cause.page cause.totalpages}}
                        <li class="page-item disabled">
                            <a class="page-link"
                                href="../viewcauses?limit={{cause.limit}}&page={{cause.nextPage}} disabled">Next</a>
                        </li>
                        {{else}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="../viewcauses?limit={{cause.limit}}&page={{cause.nextPage}}">Next</a>
                        </li>
                        {{/next}} --}}


                    </ul>
                </nav>
            </div>
            {{/if}}
        </div>
    </div>
</div>
</div>